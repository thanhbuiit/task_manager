!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %title Jquery
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body{:role => "document"}
    %nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "Bootstrap theme",{:controller => :home, :action => :index},{class: "navbar-brand"}
        #navbar.navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li.active
              = link_to "Home", root_url
            %li= link_to "#{t('add-list')}", new_list_path
            %li= link_to "Show list hidden", show_list_not_active_path
            %li= link_to "Show task hidden", show_task_not_active_path
        / /.nav-collapse
    .container.theme-showcase{:role => "main"}
      .row
        .body
          = yield
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = render 'layouts/js_locales_info'
