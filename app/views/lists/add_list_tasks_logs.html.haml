= form_for @list, url: add_list_path ,:html => { class: "form-horizontal"} do |f|
  .col-sm-6.col-sm-offset-3
    .panel.panel-primary
      .panel-heading
        .row
          .col-xs-7.col-sm-10.col-md-7
            %h3.panel-title List
      .panel-body
        .form-group
          %label.col-sm-2.control-label Name
          .col-sm-10
            = f.text_field :name , class: "form-control"
        .form-group
          %label.col-sm-2.control-label Hidden
          .col-sm-10
            = f.check_box :hidden , {class: "form-control" }, "1", "0"
        = f.fields_for :tasks do |t|
          .panel.panel-primary
            .panel-heading
              .row
                .col-xs-7.col-sm-10.col-md-7
                  %h3.panel-title Task
            .panel-body
              = render 'form_tasks', task: t
      .panel-footer
        = f.submit class: "btn btn-primary"